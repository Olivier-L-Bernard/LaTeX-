\newcommand\entete{
    \thispagestyle{firststyle}
    \flushleft
    \begin{minipage}{17cm}
    {\Large \Nomredacteur \par} 
    \vspace{2mm}
    {\large \CoteDuCours}
    \end{minipage}
    
    \vspace{1cm}
    \headline{\textbf{{\Large \Doc \, \NoDev}}}
    \vspace{1cm}
}

